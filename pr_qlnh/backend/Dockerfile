FROM php:8.2-fpm

# ---------------------------
# 1Ô∏è‚É£ C√†i system dependencies
# ---------------------------
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    unzip \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# ---------------------------
# 2Ô∏è‚É£ C√†i PHP extensions
# ---------------------------
RUN docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd

# ---------------------------
# 3Ô∏è‚É£ C√†i Composer
# ---------------------------
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# ---------------------------
# 4Ô∏è‚É£ Set working directory
# ---------------------------
WORKDIR /var/www

# ---------------------------
# 5Ô∏è‚É£ Copy source code
# ---------------------------
COPY . /var/www

# ---------------------------
# 6Ô∏è‚É£ D·ªçn cache Laravel ƒë·ªÉ tr√°nh l·ªói "Target class [auth]"
# ---------------------------
RUN rm -rf bootstrap/cache/*.php

# ---------------------------
# 7Ô∏è‚É£ C√†i dependencies PHP (composer)
# ---------------------------
RUN composer install --no-interaction --prefer-dist --optimize-autoloader \
    && composer dump-autoload --optimize

# ---------------------------
# 8Ô∏è‚É£ C√†i Redis (n·∫øu c·∫ßn)
# ---------------------------
RUN pecl install redis && docker-php-ext-enable redis

# ---------------------------
# 9Ô∏è‚É£ Ph√¢n quy·ªÅn storage & bootstrap/cache
# ---------------------------
RUN chown -R www-data:www-data /var/www \
    && chmod -R 755 /var/www/storage \
    && chmod -R 755 /var/www/bootstrap/cache

# ---------------------------
# üîü Expose port & kh·ªüi ƒë·ªông app
# ---------------------------
EXPOSE 8000

